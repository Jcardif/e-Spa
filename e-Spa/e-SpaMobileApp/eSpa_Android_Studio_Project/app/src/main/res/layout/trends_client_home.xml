<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:lineSpacingExtra="-5.3sp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:text="Title Goes Here"
        android:id="@+id/trendsTitleTxtView"
        android:layout_margin="11dp"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:lineSpacingExtra="-5.3sp"
        android:textSize="14dp"
        android:gravity="left"
    android:text="This is what you share, sth new sth
    trendy sth others my want to know about.
    Pin it here get up votes and get featured on the app "
    android:id="@+id/trendsDescTxtView"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"/>

    <view
        android:layout_width="1dp"
        android:layout_height="104dp"
        android:layout_marginLeft="13.7dp"
        android:background="#fff"
        android:orientation="vertical" />
</LinearLayout>