<?xml version="1.0"?>
<resources>
    <!-- Base application theme. -->
    <style parent="Theme.AppCompat.Light.NoActionBar" name="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <!--Login Theme-->
    <style parent="Theme.AppCompat.Light.NoActionBar" name="LogInTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <!--Alert Dialog Theme-->
    <style parent="Theme.AppCompat.Light.Dialog" name="AlertDialogTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--splashscreen theme-->
    <style parent="splashScreen.Base" name="SplashTheme"/>
    <style parent="Theme.AppCompat.Light" name="splashScreen.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>